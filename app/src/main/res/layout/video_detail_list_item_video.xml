<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/video_thumbnail"
        tools:background="@tools:sample/backgrounds/scenic"
        android:scaleType="centerCrop"
        android:layout_width="160dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/video_title"
        tools:text="Entrevista com Marlon Wayans - The Noite"
        android:textStyle="bold"
        android:maxLines="2"
        android:layout_marginStart="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/video_thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/video_actions"
        />

    <TextView
        android:id="@+id/video_info"
        tools:text="Entrevista com Marlon Wayans - The Noite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/video_title"
        app:layout_constraintStart_toStartOf="@id/video_title"
        app:layout_constraintEnd_toStartOf="@id/video_actions"
        android:textSize="12sp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/video_actions"
        android:src="@drawable/ic_more_vert_blacked_24dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>